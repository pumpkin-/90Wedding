<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <TextView
        android:id="@+id/tv_password_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="50dp"
        android:background="#e3e3e3" />

    <RelativeLayout
        android:id="@+id/rl_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_password_line">

        <EditText
            android:id="@+id/et_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#fff"
            android:hint="请输入密码(6-19位数字、字母或符号)"
            android:inputType="textPassword"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingTop="12dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_hint"
            android:textCursorDrawable="@null"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/iv_delete_input_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/et_input_password"
            android:padding="5dp"
            android:src="@mipmap/delete_input_content"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_password"
        android:background="#e3e3e3" />

    <TextView
        android:id="@+id/tv_password_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/sign_in_normal"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="10dp"
        android:text="完  成"
        android:textColor="#fff"
        android:textSize="22sp" />

</RelativeLayout>
