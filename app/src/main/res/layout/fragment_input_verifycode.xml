<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <TextView
        android:id="@+id/tv_verifyCode_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="50dp"
        android:background="#e3e3e3" />

    <LinearLayout
        android:id="@+id/ll_verifyCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_verifyCode_line"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_input_verifyCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:hint="请输入验证码"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingTop="12dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_hint"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_delete_input_verifyCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@mipmap/delete_input_content"
            android:visibility="gone" />

        <TextView
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:background="#e3e3e3"
            android:padding="13dp" />

        <TextView
            android:id="@+id/tv_get_verifyCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#fff"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="获取验证码"
            android:textColor="#808080"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/ll_verifyCode"
        android:background="#e3e3e3" />

    <TextView
        android:id="@+id/tv_verifyCode_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_verifyCode"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/sign_in_normal"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="10dp"
        android:text="下一步"
        android:textColor="#fff"
        android:textSize="22sp" />

</RelativeLayout>
