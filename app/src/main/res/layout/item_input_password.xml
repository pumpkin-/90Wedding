<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="#fff"
        android:hint="请输入密码(6~19位数字、字母或符号)"
        android:inputType="textPassword"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:textColor="@color/commen_text_color_1"
        android:textColorHint="@color/commen_text_color_hint"
        android:textCursorDrawable="@null"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/iv_view_input_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp" />

    <ImageView
        android:id="@+id/iv_delete_input_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/iv_view_input_password"
        android:padding="5dp"
        android:src="@mipmap/delete_input_content"
        android:visibility="invisible" />

</RelativeLayout>